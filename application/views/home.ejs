<style>
  body {
    background-color: black;
    color: white;
    margin: 0;
    font-family: 'Arial', sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  h1 {
    color: red;
    font-size: 4rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  input[type="file"] {
    background-color: white;
    color: black;
    border: none;
    padding: 0.5rem;
    border-radius: 5px;
  }

  input[type="submit"] {
    background-color: red;
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    font-size: 1.1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  input[type="submit"]:hover {
    background-color: #cc0000;
  }
</style>

<h1>Netflix Wrapped</h1>

<form action="/upload" method="POST" enctype="multipart/form-data">
  <input type="file" name="netflixData" required />
  <input type="submit" value="Upload Data" />
</form>

